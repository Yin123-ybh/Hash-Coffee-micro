<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coffee.userservice.mapper.AddressMapper">

    <!-- 结果映射 -->
    <resultMap id="addressResultMap" type="com.coffee.userservice.entity.Address">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="receiver_name" property="receiverName"/>
        <result column="receiver_phone" property="receiverPhone"/>
        <result column="province" property="province"/>
        <result column="city" property="city"/>
        <result column="district" property="district"/>
        <result column="detail_address" property="detailAddress"/>
        <result column="is_default" property="isDefault"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    <!-- 根据ID查询地址 -->
    <select id="selectById" resultMap="addressResultMap">
        SELECT * FROM addresses WHERE id = #{id}
    </select>
    <!-- 根据用户ID查询地址列表 -->
    <select id="selectByUserId" resultMap="addressResultMap">
        SELECT * FROM addresses WHERE user_id = #{userId}
    </select>
    <!-- 根据用户ID查询默认地址 -->
    <select id="selectDefaultByUserId" resultMap="addressResultMap">
        SELECT * FROM addresses
        WHERE user_id = #{userId} AND is_default = 1
        LIMIT 1
    </select>
    <!-- 插入地址 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into addresses(user_id, receiver_name, receiver_phone, province, city, district, detail_address, is_default, create_time, update_time)
        VALUES (#{userId}, #{receiverName}, #{receiverPhone}, #{province}, #{city}, #{district}, #{detailAddress}, #{isDefault}, #{createTime}, #{updateTime})
    </insert>
    <!-- 更新地址 -->
    <update id="update">
        update addresses
        <set>
            <if test="receiverName != null">receiver_name = #{receiverName},</if>
            <if test="receiverPhone != null">receiver_phone = #{receiverPhone},</if>
            <if test="province != null">province = #{province},</if>
            <if test="city != null">city = #{city},</if>
            <if test="district != null">district = #{district},</if>
            <if test="detailAddress != null">detail_address = #{detailAddress},</if>
            <if test="isDefault != null">is_default = #{isDefault},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </set>
        WHERE id = #{id}
    </update>
    <!-- 根据ID删除地址 -->
    <delete id="deleteById">
        DELETE FROM addresses WHERE id = #{id}
    </delete>

    <!-- 取消用户所有默认地址 -->
    <update id="cancelDefaultByUserId">
        UPDATE addresses
        SET is_default = 0, update_time = NOW()
        WHERE user_id = #{userId}
    </update>

    <!-- 设置默认地址 -->
    <update id="setDefault">
        UPDATE addresses
        SET is_default = 1, update_time = NOW()
        WHERE id = #{id} AND user_id = #{userId}
    </update>



</mapper>

